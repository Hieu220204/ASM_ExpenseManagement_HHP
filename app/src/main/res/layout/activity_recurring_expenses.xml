<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RecurringExpensesActivity">

    <!-- Tiêu đề trang -->
    <TextView
        android:id="@+id/textTitleRecurringExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recurring Expenses"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />



    <!-- Nhập nội dung chi tiêu -->
    <EditText
        android:id="@+id/edtExpenseContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Spending content"
        android:inputType="text"
        android:padding="12dp" />

    <!-- Tần suất chi tiêu -->
    <EditText
        android:id="@+id/spinnerFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Frequence"
        android:inputType="text"
        android:padding="12dp" />


    <!-- Nhập số tiền -->
    <EditText
        android:id="@+id/edtAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:padding="12dp" />

    <!-- Ngày bắt đầu -->
    <EditText
        android:id="@+id/edtStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Start date"
        android:inputType="date"
        android:padding="12dp" />

    <!-- Ngày kết thúc -->
    <EditText
        android:id="@+id/edtEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="End date"
        android:inputType="date"
        android:padding="12dp" />

    <!-- Nút nhập -->
    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Submit"
        android:textColor="@android:color/white" />

    <!-- Danh sách chi tiêu -->
    <ListView
        android:id="@+id/listViewExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Nhóm các nút Sửa & Quay lại -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Back to Home"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>